<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>jcafe</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>/jsp/pages/home.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>com.poleschuk.cafe.controller.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>XssProtectionFilter</filter-name>
    <filter-class>com.poleschuk.cafe.controller.filter.XssProtectionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>XssProtectionFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>CurrentPageFilter</filter-name>
    <filter-class>com.poleschuk.cafe.controller.filter.CurrentPageFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CurrentPageFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <filter>
    <filter-name>pageSecurityFilter</filter-name>
    <filter-class>com.poleschuk.cafe.controller.filter.PageSecurityFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>pageSecurityFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>commandSecurityFilter</filter-name>
    <filter-class>com.poleschuk.cafe.controller.filter.CommandSecurityFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>commandSecurityFilter</filter-name>
    <url-pattern>/controller</url-pattern>
  </filter-mapping>
  <error-page>
    <error-code>403</error-code>
    <location>/jsp/error/error_403.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/jsp/error/error_404.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/jsp/error/error_500.jsp</location>
  </error-page>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <jsp-config>
    <taglib>
      <taglib-uri>customtags</taglib-uri>
      <taglib-location>/WEB-INF/tld/taglib.tld</taglib-location>
    </taglib>
  </jsp-config>
</web-app>